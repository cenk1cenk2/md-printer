{
  "name": "@cenk1cenk2/md-printer",
  "version": "1.0.0",
  "description": "A markdown printer.",
  "main": "dist/index.js",
  "repository": "https://github.com/cenk1cenk2/md-printer",
  "author": "Cenk Kilic",
  "license": "MIT",
  "bin": {
    "md-printer": "bin/run.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "./bin/run.js",
    "prebuild": "rimraf tsconfig*.tsbuildinfo && rimraf dist/",
    "build": "tsc -p tsconfig.build.json",
    "postbuild": "tsconfig-replace-paths --project tsconfig.json",
    "dev:build": "yarn prebuild && tsc -p tsconfig.json && yarn postbuild",
    "dev:start": "yarn dev:build && tsc-watch --noClear --onSuccess \"yarn postbuild\"",
    "lint": "prettier --write src/ --loglevel warn && eslint --ext .json,.ts,.js --fix src/",
    "lint:check": "eslint --ext .json,.ts,.js src/",
    "lint:staged": "lint-staged",
    "readme": "yarn oclif-dev readme",
    "oclif": "oclif",
    "oclif-dev": "node -r tsconfig-paths/register node_modules/@oclif/dev-cli/bin/run"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn exec lint-staged",
    "prepare-commit-msg": "[ -t 1 ] && exec < /dev/tty && git cz --hook || true"
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "prettier --loglevel warn --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --loglevel warn --write"
    ]
  },
  "files": [
    "bin/",
    "config/",
    "dist/",
    "templates/"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "md-printer",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "hooks": {
      "init": "./dist/hooks/init.hook",
      "command_not_found": "./dist/hooks/not-found.hook",
      "prerun": "./dist/hooks/prerun.hook"
    }
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "keywords": [
    "oclif",
    "cenk1cenk2"
  ],
  "dependencies": {
    "@cenk1cenk2/boilerplate-oclif": "^1.10.6",
    "@oclif/command": "^1.8.16",
    "@oclif/config": "^1.18.3",
    "@oclif/errors": "^1.3.5",
    "config": "^3.3.7",
    "enquirer": "^2.3.6",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.1",
    "globby": "^11.1.0",
    "listr2": "^3.14.0",
    "md-to-pdf": "^5.1.0",
    "tslib": "^2.3.1",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@cenk1cenk2/cz-cc": "^1.5.2",
    "@cenk1cenk2/eslint-config": "^2.5.7",
    "@oclif/dev-cli": "^1.26.10",
    "@types/config": "^0.0.41",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "eslint": "^8.10.0",
    "lint-staged": "^12",
    "prettier": "^2.5.1",
    "simple-git-hooks": "^2.7.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsc-watch": "^4.6.0",
    "tsconfig-paths": "^3.13.0",
    "tsconfig-replace-paths": "^0.0.11",
    "typescript": "^4.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@cenk1cenk2/cz-cc"
    }
  }
}
